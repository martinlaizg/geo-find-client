<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.martinlaizg.geofind.views.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/toLocationListFragment"
            app:destination="@id/location_list_fragment" />
        <action
            android:id="@+id/toMapListFragment"
            app:destination="@id/map_list_fragment" />
    </fragment>
    <fragment
        android:id="@+id/location_list_fragment"
        android:name="com.martinlaizg.geofind.views.fragment.LocationListFragment"
        android:label="fragment_location_list"
        tools:layout="@layout/fragment_location_list" />
    <fragment
        android:id="@+id/map_list_fragment"
        android:name="com.martinlaizg.geofind.views.fragment.MapListFragment"
        android:label="toMapListFragment"
        tools:layout="@layout/fragment_maps_list" />
</navigation>