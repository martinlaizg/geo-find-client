<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="com.martinlaizg.geofind.views.fragment.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action app:destination="@id/navMapList" />
        <action app:destination="@id/navSettings" />
        <action
            android:id="@+id/toLogin"
            app:destination="@id/navLogin" />
    </fragment>
    <fragment
        android:id="@+id/navCreateLocation"
        android:name="com.martinlaizg.geofind.views.fragment.creator.CreateLocationFragment"
        android:label="@string/create_location"
        tools:layout="@layout/fragment_create_locations" />
    <fragment
        android:id="@+id/navCreateMap"
        android:name="com.martinlaizg.geofind.views.fragment.creator.CreateMapFragment"
        android:label="@string/map_creator"
        tools:layout="@layout/fragment_create_map">
        <action
            android:id="@+id/toCreator"
            app:destination="@id/navCreator"
            app:popUpToInclusive="true" />
        <argument
            android:name="MAP_ID"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/navCreator"
        android:name="com.martinlaizg.geofind.views.fragment.creator.CreatorFragment"
        android:label="@string/map_creator"
        tools:layout="@layout/fragment_creator">
        <action
            android:id="@+id/toCreateLocation"
            app:destination="@id/navCreateLocation" />
        <action
            android:id="@+id/toNewMap"
            app:destination="@id/navMap"
            app:popUpTo="@+id/navMapList" />
    </fragment>
    <fragment
        android:id="@+id/navMapList"
        android:name="com.martinlaizg.geofind.views.fragment.list.MapListFragment"
        android:label="@string/map_list"
        tools:layout="@layout/fragment_maps_list">
        <action
            android:id="@+id/toCreateMap"
            app:destination="@id/navCreateMap" />
        <action
            android:id="@+id/toMap"
            app:destination="@id/navMap" />
    </fragment>
    <fragment
        android:id="@+id/navMap"
        android:name="com.martinlaizg.geofind.views.fragment.single.MapFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_map">
        <action app:destination="@id/navLocation" />
        <action app:destination="@id/playMapOnMapFragment" />
        <action
            android:id="@+id/toEditMap"
            app:destination="@id/navCreateMap" />
    </fragment>
    <fragment
        android:id="@+id/navLocation"
        android:name="com.martinlaizg.geofind.views.fragment.single.LocationFragment"
        android:label="@string/location"
        tools:layout="@layout/fragment_location" />
    <fragment
        android:id="@+id/navLogin"
        android:name="com.martinlaizg.geofind.views.fragment.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/toRegistry"
            app:destination="@id/navRegistry"
            app:enterAnim="@anim/nav_default_enter_anim" />
        <argument
            android:name="EMAIL"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="PASSWORD"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/navSettings"
        android:name="com.martinlaizg.geofind.views.preferences.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/navRegistry"
        android:name="com.martinlaizg.geofind.views.fragment.login.RegistryFragment"
        android:label="@string/registry"
        tools:layout="@layout/fragment_registry" />
    <fragment
        android:id="@+id/playMapOnMapFragment"
        android:name="com.martinlaizg.geofind.views.fragment.play.map.PlayMapOnMapFragment"
        android:label="@string/play_map"
        tools:layout="@layout/fragment_play_map_on_map">
        <action
            android:id="@+id/toPlayLocationOnMap"
            app:destination="@id/playLocationOnMapFragment" />
    </fragment>
    <fragment
        android:id="@+id/playLocationOnMapFragment"
        android:name="com.martinlaizg.geofind.views.fragment.play.map.PlayLocationOnMapFragment"
        android:label="@string/play_location"
        tools:layout="@layout/fragment_play_location_on_map">
        <argument
            android:name="LOCATION_ID"
            app:argType="string" />
    </fragment>
</navigation>