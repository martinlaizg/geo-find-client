<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.martinlaizg.geofind.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/toRegistry"
            app:destination="@id/registryFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/registryFragment"
        android:name="com.martinlaizg.geofind.RegistryFragment"
        android:label="fragment_registry"
        tools:layout="@layout/fragment_registry">
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="password"
            app:argType="string"
            app:nullable="true" />
    </fragment>
</navigation>