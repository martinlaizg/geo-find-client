<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_navigation"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.martinlaizg.geofind.views.fragment.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="MAP_ID"
            app:argType="string" />
        <action
            android:id="@+id/toLocation"
            app:destination="@id/locationFragment" />
        <action
            android:id="@+id/playMap"
            app:destination="@id/mapFragment" />
        <argument
            android:name="PLAY_MODE"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/playMap"
            app:destination="@id/playMapFragment" />
        <action
            android:id="@+id/playCompass"
            app:destination="@+id/playCompassFragment" />
        <action
            android:id="@+id/playTherm"
            app:destination="@id/playThermFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.martinlaizg.geofind.views.fragment.LocationFragment"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location">
        <argument
            android:name="LOCATION_ID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/playMapFragment"
        android:name="com.martinlaizg.geofind.views.fragment.play.PlayMapFragment"
        android:label="fragment_play_map"
        tools:layout="@layout/fragment_play_map_location">
        <argument
            android:name="LOCATION_ID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/playCompassFragment"
        android:name="com.martinlaizg.geofind.views.fragment.play.PlayCompassFragment"
        android:label="fragment_play_compass"
        tools:layout="@layout/fragment_play_compass" />
    <fragment
        android:id="@+id/playThermFragment"
        android:name="com.martinlaizg.geofind.views.fragment.play.PlayThermFragment"
        android:label="fragment_play_therm"
        tools:layout="@layout/fragment_play_therm" />
</navigation>