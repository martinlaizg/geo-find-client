<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context=".activity.MainActivity">
    <!-- tools:openDrawer se usa para mostrar el panel de navegaci칩n cuando
        el dise침o XML est치 abierto en la vista de dise침o de Android Studio -->

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        />
        <!-- android:layout_gravity="start" -->

    <Button
        android:id="@+id/btn_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/solicitar_informacion"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v4.widget.DrawerLayout>