<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/map_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: revisar esta seccion -->
            <ImageView
                android:id="@+id/map_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:contentDescription="@string/map_main_image"
                android:focusable="true"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/default_map_image" />

            <TextView
                android:id="@+id/map_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map_image"
                tools:text="@sample/maps.json/data/name" />

            <TextView
                android:id="@+id/map_creator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_name"
                android:layout_alignStart="@+id/map_name"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_user_black"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/map_name"
                app:layout_constraintStart_toStartOf="@+id/map_name"
                app:layout_constraintTop_toBottomOf="@+id/map_name"
                tools:text="@sample/maps.json/data/creator" />


            <TextView
                android:id="@+id/map_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:minLines="1"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/map_creator"
                app:layout_constraintStart_toStartOf="@+id/map_name"
                app:layout_constraintTop_toBottomOf="@+id/map_creator"
                tools:text="@sample/maps.json/data/description" />


            <ProgressBar
                android:id="@+id/map_progress_bar"
                style="@style/AppTheme.ProgressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/map_progress_text"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/map_progress_text"
                app:layout_constraintStart_toStartOf="@+id/map_creator"
                app:layout_constraintTop_toBottomOf="@+id/map_description"
                tools:progress="@sample/maps.json/data/progress" />

            <TextView
                android:id="@+id/map_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#88000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/map_progress_bar"
                app:layout_constraintEnd_toEndOf="@+id/map_creator"
                app:layout_constraintTop_toTopOf="@+id/map_progress_bar"
                tools:text="@sample/maps.json/data/progress_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
