<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.personal.MyAccountActivity">

    <include layout="@layout/app_bar_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/app_bar_layout_height"
        android:layout_marginEnd="@dimen/normal_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/account_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="@string/user_name"
            android:textSize="@dimen/normal_text" />

        <Button
            android:id="@+id/create_map_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/create_map_text" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>