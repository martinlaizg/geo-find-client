<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/small_margin"
    android:paddingTop="@dimen/small_margin"
    android:paddingEnd="@dimen/normal_margin"
    android:paddingBottom="@dimen/small_margin">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/location_description"
        android:src="@drawable/default_map_image" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        android:ellipsize="end"
        android:maxWidth="240dp"
        android:maxLines="2"
        android:text="@string/default_location_name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/location_distance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/micro_margin"
        android:gravity="end"
        android:text="@string/default_location_distance"
        android:textSize="16sp" />

</LinearLayout>

