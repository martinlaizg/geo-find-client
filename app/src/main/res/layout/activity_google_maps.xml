<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar_main" />

    <com.google.android.gms.map.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.map.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/app_bar_layout_height" />

    <androidx.cardview.widget.CardView
        android:id="@+id/map_card_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/map"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/map_card_corner_radius_negative"
        app:cardCornerRadius="@dimen/map_card_corner_radius"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/map_card_corner_radius">

            <TextView
                android:id="@+id/map_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_toStartOf="@+id/expandable_map_description_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Titulo del mapa"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/expandable_map_description_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/normal_margin"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/expandable_icon_description"
                android:focusable="true"
                android:src="@drawable/ic_arrow_down" />

            <TextView
                android:id="@+id/map_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_title"
                android:layout_alignStart="@+id/map_title"
                android:layout_toStartOf="@+id/expandable_map_description_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Localizacion del mapa"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/map_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_location"
                android:layout_alignStart="@+id/map_location"
                android:layout_alignEnd="@id/expandable_map_description_icon"
                android:layout_marginTop="@dimen/small_margin"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/default_map_description"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- TODO: añadir botón desplegable de la descripción -->

            <!-- TODO: cambiar imagen única por vista horizontal de imagenes -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/map_description"
                android:layout_margin="@dimen/normal_margin"
                android:contentDescription="@string/map_image_description"
                android:scaleType="center"
                android:src="@drawable/default_map_image" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>