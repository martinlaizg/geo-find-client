<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_list_item"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing"
    android:layout_marginTop="@dimen/card_spacing"
    android:layout_marginRight="@dimen/card_spacing"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="200dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/map_image_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/map_image_description"
                android:src="@drawable/default_map_image" />

            <TextView
                android:id="@+id/map_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/map_image_item"
                android:layout_alignParentStart="true"
                android:layout_marginStart="72dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/map_name"
                android:textSize="20sp" />
            <!-- TODO: revisar esta seccion -->
            <TextView
                android:id="@+id/map_creator"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_below="@+id/map_name"
                android:layout_alignStart="@+id/map_name"
                android:layout_alignBottom="@+id/map_image_item"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="-5dp"
                android:text="@string/map_creator"
                android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:contentDescription="@string/map_main_image"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_map_image" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/map_main_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/default_map_description"
                android:textSize="14sp" />


            <ProgressBar
                android:id="@+id/map_progress_bar"
                style="@style/AppTheme.ProgressBar"
                android:layout_width="280dp"
                android:layout_height="@dimen/progress_bar"
                android:layout_alignBottom="@+id/progress_value"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:progress="33" />

            <TextView
                android:id="@+id/progress_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/expandable_icon"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/expandable_icon"
                android:text="@string/default_progress"
                android:textColor="#88000000"
                android:textSize="@dimen/normal_text"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/expandable_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/map_main_description"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/expandable_icon_description"
                android:focusable="true"
                android:src="@drawable/ic_arrow_down" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/expandable_menu"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/play_map" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/play_compass" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_therm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_margin"
                android:layout_weight="1"
                android:text="@string/play_therm" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
