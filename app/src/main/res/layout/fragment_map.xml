<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.map.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/map_card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/map"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="@dimen/map_card_corner_radius"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/map_card_corner_radius">

            <TextView
                android:id="@+id/map_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/expandable_map_description_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Titulo del mapa"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/expandable_map_description_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/expandable_map_description_icon"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/expandable_icon_description"
                android:focusable="true"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toTopOf="@+id/map_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/map_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_name"
                android:layout_alignStart="@+id/map_name"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/expandable_map_description_icon"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Localizacion del mapa"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/expandable_map_description_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map_name" />

            <TextView
                android:id="@+id/map_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map_location"
                android:layout_alignStart="@+id/map_location"
                android:layout_alignEnd="@id/expandable_map_description_icon"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@string/default_map_description"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map_location" />

            <!-- TODO: añadir botón desplegable de la descripción -->

            <!-- TODO: cambiar imagen única por vista horizontal de imagenes -->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/map_description"
                android:layout_margin="@dimen/normal_margin"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/map_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/default_map_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/map_description" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>