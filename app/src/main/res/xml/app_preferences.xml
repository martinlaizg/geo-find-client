<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/pref_map"
        android:entries="@array/map_types"
        android:entryValues="@array/pref_map_types"
        android:icon="@drawable/ic_map"
        android:key="@string/pref_map_type"
        android:title="@string/default_map_type" />

    <Preference
        android:icon="@drawable/ic_info_outline"
        android:key="@string/pref_support"
        android:summary="@string/send_message_to_support"
        android:title="@string/errors_and_suggestions" />

    <Preference
        android:key="@string/pref_log_out"
        android:title="@string/log_out" />

    <PreferenceCategory android:title="@string/app_info">

        <Preference
            android:summary="@string/app_version_name"
            android:title="@string/app_version" />
        <Preference
            android:summary="@string/developer"
            android:title="@string/app_developer" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>